<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#673AB7"
    android:padding="10dp"
    tools:context=".view.EducationalModule.EvaluationActivities.RuralReformEvaluation">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/linear_layuout_back"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="bottom|center"
            android:text="ACTIVIDAD \n Â¡A RECUPERAR EL CAMPO COLOMBIANO!"
            android:textColor="#673AB7"
            android:textSize="15dp"
            android:textStyle="bold" />
        <me.biubiubiu.justifytext.library.JustifyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:text="EL CONFLICTO ARMADO TAMBEN ATRAVIESA NUESTRO CAMPO COLOMBIANO, POR ELLO ES TAN
IMPORTANTE LA EDUCACION AMBIENTAL, QUE INVITE AL APRENDIENTE Y A SU ENTORNO A RECUPERAR,
CUIDAR Y PRESERVAR EL CAMPO. \n"
            android:textStyle="italic" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text=" CON TU GRUPO  BUSCA LA ZONA VERDE MAS
CERCANA E INICIA LA RECUPERACION DE ESTA HACIENDO LIMPIEZA\n\n LUEGO DE ESTO HAZ UN REFLEXION COLECTIVA RECONOCIENDO LAS ZONAS VERDES COMO PORTADORAS DE VIDA, DE
HABITAD Y ALIMENTO PARA LA SOCIEDAD Y NATURALEZA"
            android:textStyle="bold" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="15dp"
            android:hint="Escribe la reflexion que te quedo "
            android:gravity="center"/>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terminaste?"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_margin="10dp"
            android:background="@drawable/btn_back"
            android:text="Terminar"
            android:textColor="#fff" />
    </LinearLayout>
</RelativeLayout>