<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#673AB7"
    android:padding="10dp"
    tools:context=".EvaluationActivities.TimeLinePeaceEvaluation">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/linear_layuout_back"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="bottom|center"
            android:text="ACTIVIDAD \n  CAARTOGRAFIA SOCIAL"
            android:textColor="#673AB7"
            android:textSize="15dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="El objetivo de esta actividad es el acercamiento a las problemáticas y conceptos por medio del dialogo como pilar fundamental en el reconocimiento y resolución de los mismos. "
            android:textStyle="italic" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text=" CON TU GRUPO  IDENTIFICA LOS CONFLICTOS DE TU TERRITORIO, LLEGUEN A UN ACUERDO E INTENTE ENUMERAR LAS CAUSAS Y EFECTOS DE ESTOS CONFLICTOS."
            android:textStyle="bold" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="15dp"
            android:hint="Escribe la reflexion que te quedo "
            android:gravity="center"/>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terminaste?"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_margin="10dp"
            android:background="@drawable/btn_back"
            android:text="Terminar"
            android:textColor="#fff" />
    </LinearLayout>

</RelativeLayout>